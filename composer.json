{
    "name": "skywalker/laravel-html",
    "description": "Modern HTML & Form Builder for Laravel with 50+ components, theme support (Bootstrap/Tailwind), Livewire integration, and accessibility features",
    "type": "library",
    "keywords": [
        "laravel",
        "html",
        "form",
        "form-builder",
        "bootstrap",
        "tailwind",
        "livewire",
        "blade-components",
        "accessibility",
        "ui-components"
    ],
    "support": {
        "issues": "https://github.com/ermradulsharma/laravel-html/issues",
        "source": "https://github.com/ermradulsharma/laravel-html",
        "forum": "https://github.com/ermradulsharma/laravel-html/discussions",
        "chat": "https://github.com/ermradulsharma/laravel-html/discussions",
        "wiki": "https://github.com/ermradulsharma/laravel-html/wiki",
        "documentation": "https://github.com/ermradulsharma/laravel-html/wiki",
        "email": "skywalkerlknw@gmail.com"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ermradulsharma"
        }
    ],
    "homepage": "https://github.com/ermradulsharma/laravel-html",
    "license": "MIT",
    "authors": [
        {
            "name": "Mradul Sharma",
            "email": "skywalkerlknw@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/routing": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/session": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/support": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/contracts": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/view": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "ermradulsharma/laravel-toolkit": "^1.0|^2.0"
    },
    "require-dev": {
        "illuminate/database": "^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.3|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Skywalker\\Html\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Skywalker\\Html\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "Skywalker\\Html\\HtmlServiceProvider"
            ],
            "aliases": {
                "Form": "Skywalker\\Html\\FormFacade",
                "Html": "Skywalker\\Html\\HtmlFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}